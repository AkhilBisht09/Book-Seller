                            <div class="card-body">
                                <h5 class="card-title"><%= row.prod_name %></h5>
                                <p class="card-text"><%=row.author%>
                                    <br>
                                    &#x20b9;<%= row.cost %>
                                </p>
                                </div>
                            </div>
                                </a>
                            </div>
                    <% if(index%5 === 4 || index==result.length-1) {%>
                </div><br>
                <%}%>
                                <%}); %>
    </div>
<h1>Sold</h1>
                <div style="padding-top:5em; background-color:#9099A2; min-height: 20em;">
