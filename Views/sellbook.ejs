<%- include('partials/header.ejs') %>
<div style="background-color:#9099A2;" class="nav justify-content-center modal-dialog-centered">
<form action="/product/profile" method="post" enctype="multipart/form-data"  >
    <div class="form-group row">
        <label class="col-sm-4 col-form-label col-form-label-sm">Name</label>
        <input type="text" class="form-control col-sm-8 form-control-sm" name="name">
    </div>
    <div class="form-group row">
<label class="col-sm-4 col-form-label col-form-label-sm">Author Name</label>
<input type="text" class="form-control form-control-sm col-sm-8" name="authorname">
    </div>
    <div class="form-group row">
    <label class="col-sm-4 col-form-label col-form-label-sm">Add image</label>
    <input type="file" class="form-control-file form-control-sm col-sm-8" name="avatar" />
    </div>
    <div class="form-group row">
    <label class="col-sm-4 col-form-label col-form-label-sm">Price</label>
    <input type="text" class="form-control form-control-sm col-sm-8" name="price"/>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label col-form-label-sm">Description</label>
        <textarea class="form-control form-control-sm col-sm-8" name="description"></textarea>
    </div>
   <div class="nav justify-content-center">
<button type="submit" name="submit" class="btn btn-primary ">Submit</button>
   </div>
   
</form>
</div>
        
